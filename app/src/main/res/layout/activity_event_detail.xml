<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.DetailEventActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/dea_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <TextView
                android:id="@+id/dea_toolbar_tv_title"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white" />

        </androidx.appcompat.widget.Toolbar>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/dea_cl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/dea_tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_theme"
                    android:gravity="center"
                    android:paddingStart="18dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="18dp"
                    android:paddingBottom="12dp"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dea_tv_title" />

                <TextView
                    android:id="@+id/dea_tv_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/font"
                    android:textSize="@dimen/normal_label_font_size"
                    app:layout_constraintEnd_toStartOf="@id/dea_iv_private"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/dea_iv_private"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="@string/rv_iv_private"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="@id/dea_tv_title"
                    app:layout_constraintEnd_toStartOf="@id/dea_iv_chat"
                    app:layout_constraintTop_toTopOf="@id/dea_tv_title"
                    app:layout_constraintVertical_bias="1.0"
                    app:srcCompat="@drawable/ic_lock" />

                <ImageView
                    android:id="@+id/dea_iv_chat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="@string/rv_iv_chat"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="@id/dea_tv_title"
                    app:layout_constraintEnd_toStartOf="@id/dea_iv_decline"
                    app:layout_constraintTop_toTopOf="@id/dea_tv_title"
                    app:layout_constraintVertical_bias="1.0"
                    app:srcCompat="@drawable/ic_chat2" />

                <TextView
                    android:id="@+id/dea_tv_full_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:ellipsize="end"
                    android:gravity="bottom"
                    android:maxEms="20"
                    android:maxLines="1"
                    android:textColor="@color/font"
                    android:textSize="@dimen/normal_label_font_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/dea_tv_date"
                    app:layout_constraintTop_toTopOf="@id/dea_tv_date" />

                <TextView
                    android:id="@+id/dea_tv_add"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="8dp"
                    android:ellipsize="end"
                    android:gravity="top"
                    android:maxEms="20"
                    android:maxLines="1"
                    android:textColor="@color/font"
                    android:textSize="@dimen/normal_label_font_size"
                    app:layout_constraintBottom_toBottomOf="@id/dea_tv_date"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@id/dea_tv_date"
                    app:layout_constraintTop_toBottomOf="@id/dea_tv_full_date" />

                <ImageView
                    android:id="@+id/dea_iv_decline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:contentDescription="@string/rv_iv_decline"
                    android:focusable="true"
                    android:foreground="?android:selectableItemBackground"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="@id/dea_tv_title"
                    app:layout_constraintEnd_toStartOf="@id/dea_iv_accept"
                    app:layout_constraintTop_toTopOf="@id/dea_tv_title"
                    app:srcCompat="@drawable/ic_decline"
                    tools:ignore="UnusedAttribute" />

                <ImageView
                    android:id="@+id/dea_iv_accept"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:contentDescription="@string/rv_iv_accept"
                    android:focusable="true"
                    android:foreground="?android:selectableItemBackground"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="@id/dea_tv_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/dea_tv_title"
                    app:srcCompat="@drawable/ic_accept"
                    tools:ignore="UnusedAttribute" />

                <ImageView
                    android:id="@+id/dea_iv_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="8dp"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:contentDescription="@string/rv_iv_share"
                    android:focusable="true"
                    android:foreground="?android:selectableItemBackground"
                    android:padding="4dp"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/dea_iv_like"
                    app:layout_constraintTop_toBottomOf="@id/dea_tv_date"
                    app:srcCompat="@drawable/ic_share"
                    tools:ignore="UnusedAttribute" />

                <ImageView
                    android:id="@+id/dea_iv_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:contentDescription="@string/rv_iv_like"
                    android:focusable="true"
                    android:foreground="?android:selectableItemBackground"
                    android:padding="4dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/dea_iv_coming_count"
                    app:layout_constraintTop_toBottomOf="@id/dea_tv_date"
                    app:srcCompat="@drawable/ic_like"
                    tools:ignore="UnusedAttribute" />

                <TextView
                    android:id="@+id/dea_iv_coming_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/count_font_size"
                    app:layout_constraintBottom_toBottomOf="@id/dea_iv_like"
                    app:layout_constraintEnd_toStartOf="@id/dea_iv_more"
                    app:layout_constraintTop_toTopOf="@id/dea_iv_like"
                    app:layout_constraintVertical_bias="0.666" />

                <ImageView
                    android:id="@+id/dea_iv_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="8dp"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:contentDescription="@string/rv_iv_more"
                    android:focusable="true"
                    android:foreground="?android:selectableItemBackground"
                    android:padding="4dp"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dea_tv_date"
                    app:srcCompat="@drawable/ic_more"
                    tools:ignore="UnusedAttribute" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/dea_cl_other"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dea_cl">

                <TextView
                    android:id="@+id/dea_tv_other"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/normal_label_font_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/dea_view"
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/grey"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dea_tv_other" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/dea_tl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dea_cl_other"
                app:tabGravity="fill"
                app:tabMode="fixed"
                app:tabRippleColor="@color/light_grey"
                app:tabSelectedTextColor="@color/colorPrimary"
                app:tabTextAppearance="?android:textAppearanceSmall"
                app:tabTextColor="@color/grey" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <FrameLayout
        android:id="@+id/dea_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>