                android:text="@string/na_sw_sl"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/tv_font"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/na_sw_ad" />

            <Switch
                android:id="@+id/na_sw_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="8dp"
                android:checked="true"
                android:padding="14dp"
                android:text="@string/na_sw_canceled"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/tv_font"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/na_sw_sl" />

