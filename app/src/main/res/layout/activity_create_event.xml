<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.CreateEventActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/cea_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <TextView
                android:id="@+id/cea_toolbar_tv_title"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white" />

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <EditText
            android:id="@+id/cea_et_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_edit_text"
            android:hint="@string/cea_et_name"
            android:imeOptions="actionDone"
            android:importantForAutofill="no"
            android:inputType="textCapWords"
            android:padding="@dimen/et_padding"
            android:textColor="@color/font"
            android:textColorHint="@color/grey"
            android:textSize="@dimen/et_font_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="UnusedAttribute" />

        <TextView
            android:id="@+id/cea_tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:text="@string/cea_val_name"
            android:textColor="@color/red"
            android:textSize="@dimen/error_font_size"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cea_et_name" />

        <EditText
            android:id="@+id/cea_et_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_edit_text"
            android:focusable="false"
            android:hint="@string/cea_et_date"
            android:imeOptions="actionDone"
            android:importantForAutofill="no"
            android:inputType="datetime"
            android:padding="@dimen/et_padding"
            android:textColor="@color/font"
            android:textColorHint="@color/grey"
            android:textSize="@dimen/et_font_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cea_tv_name"
            tools:ignore="UnusedAttribute" />

        <TextView
            android:id="@+id/cea_tv_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:text="@string/cea_val_date"
            android:textColor="@color/red"
            android:textSize="@dimen/error_font_size"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cea_et_date" />

        <EditText
            android:id="@+id/cea_et_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_edit_text"
            android:focusable="auto"
            android:hint="@string/cea_et_location"
            android:imeOptions="actionDone"
            android:importantForAutofill="no"
            android:inputType="textCapWords"
            android:padding="@dimen/et_padding"
            android:textColor="@color/font"
            android:textColorHint="@color/grey"
            android:textSize="@dimen/et_font_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cea_tv_date"
            tools:ignore="UnusedAttribute" />

        <TextView
            android:id="@+id/cea_tv_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:text="@string/cea_val_location"
            android:textColor="@color/red"
            android:textSize="@dimen/error_font_size"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cea_et_location" />

        <TextView
            android:id="@+id/cea_tv_private"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:drawableEnd="@drawable/ic_private_2"
            android:drawablePadding="8dp"
            android:text="@string/cea_tv_private"
            android:textColor="@color/font"
            android:textSize="@dimen/normal_label_font_size"
            app:layout_constraintBottom_toBottomOf="@id/cea_sw_private"
            app:layout_constraintEnd_toStartOf="@+id/cea_sw_private"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/cea_sw_private" />

        <Switch
            android:id="@+id/cea_sw_private"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:checked="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cea_tv_location" />

        <TextView
            android:id="@+id/cea_tv_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:drawableEnd="@drawable/ic_share_2"
            android:drawablePadding="8dp"
            android:text="@string/cea_tv_can_guest"
            android:textColor="@color/font"
            android:textSize="@dimen/normal_label_font_size"
            app:layout_constraintBottom_toBottomOf="@id/cea_sw_cg"
            app:layout_constraintEnd_toStartOf="@+id/cea_sw_cg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/cea_sw_cg" />

        <Switch
            android:id="@+id/cea_sw_cg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:checked="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cea_sw_private" />

        <TextView
            android:id="@+id/cea_tv_count_fig"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/count_font_size"
            app:layout_constraintBottom_toBottomOf="@id/cea_tv_count"
            app:layout_constraintEnd_toStartOf="@id/cea_tv_count"
            app:layout_constraintTop_toTopOf="@id/cea_tv_count" />

        <TextView
            android:id="@+id/cea_tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="@string/cea_tv_invited"
            android:textColor="@color/font"
            android:textSize="@dimen/normal_label_font_size"
            app:layout_constraintBottom_toBottomOf="@id/cea_tv_invitee"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/cea_tv_invitee" />

        <TextView
            android:id="@+id/cea_tv_invitee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/bg_theme_1"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:selectableItemBackground"
            android:paddingStart="24dp"
            android:paddingTop="12dp"
            android:paddingEnd="24dp"
            android:paddingBottom="12dp"
            android:text="@string/cea_btn_guest"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/et_font_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cea_sw_cg"
            tools:ignore="UnusedAttribute" />

        <TextView
            android:id="@+id/cea_tv_count_fig_friend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/count_font_size"
            app:layout_constraintBottom_toBottomOf="@id/cea_tv_count_friend"
            app:layout_constraintEnd_toStartOf="@id/cea_tv_count_friend"
            app:layout_constraintTop_toTopOf="@id/cea_tv_count_friend" />

        <TextView
            android:id="@+id/cea_tv_count_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="@string/cea_tv_friend_invited"
            android:textColor="@color/font"
            android:textSize="@dimen/normal_label_font_size"
            app:layout_constraintBottom_toBottomOf="@id/cea_tv_friend"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/cea_tv_friend" />

        <TextView
            android:id="@+id/cea_tv_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/bg_theme_1"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:selectableItemBackground"
            android:paddingStart="24dp"
            android:paddingTop="12dp"
            android:paddingEnd="24dp"
            android:paddingBottom="12dp"
            android:text="@string/cea_btn_friend"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/et_font_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cea_tv_invitee"
            tools:ignore="UnusedAttribute" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>